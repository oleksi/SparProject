@model  Boolean?

@if (Model.HasValue == true && Model.Value == true)
{
    @Html.RadioButtonFor(m => m, true, new { @checked = "checked" }) @:Male
    @:&nbsp;&nbsp;
    @Html.RadioButtonFor(m => m, false) @:Female
}
else if (Model.HasValue == true && Model.Value == false)
{
    @Html.RadioButtonFor(m => m, true) @:Male
    @:&nbsp;&nbsp;
    @Html.RadioButtonFor(m => m, false, new { @checked = "checked" }) @:Female
}
else
{
    @Html.RadioButtonFor(m => m, true) @:Male
    @:&nbsp;&nbsp;
    @Html.RadioButtonFor(m => m, false) @:Female
}