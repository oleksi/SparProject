@model SparWeb.Models.ConfirmSparDetailsViewModel

<dl class="dl-horizontal">
    <dt>@Html.LabelFor(m => m.SparDate):</dt>
	@if(Model.SparDate != null)
	{ 
    <dd>@Model.SparDate.Value.ToString("dddd, MMMM d, yyyy")</dd>
	}
	else
	{
	<dd>N/A</dd>
	}
    <div style="clear:both"></div>
    <dt>@Html.LabelFor(m => m.SparTime):</dt>
	@if (Model.SparTime != null)
	{ 
    <dd>@Model.SparTime</dd>
	}
	else
	{
	<dd>N/A</dd>
	}
    <div style="clear:both"></div>
    <dt>@Html.LabelFor(m => m.SparGym):</dt>
    @if (Model.SparGym != null)
    {
        <dd>@Model.SparGym.Name</dd>
    }
    else
    {
        <dd>N/A</dd>
    }
    @if (Model.ListSparNotes == false && String.IsNullOrEmpty(Model.SparNotes) == false)
    {
        <div style="clear:both"></div>
        <dt>@Html.LabelFor(m => m.SparNotes):</dt>
        <dd>@Html.DisplayFor(m => m.SparNotes)</dd>
    }
</dl>
@if (Model.ListSparNotes == true)
{
	if (Model.SparRequesStatus == SparModel.SparRequestStatus.DateLocationNegotiation && Model.SparDate > DateTime.Now.AddDays(-1))
	{
		<div class="row form-group">
			<div class="col-md-3 col-md-offset-3 col-xs-12">
				<input class="btn btn-xs btn-danger btn-lg col-xs-12" value="Change Details" onclick="showSparDetailsEdit();" type="button">
			</div>
			<div class="col-md-3 col-xs-12">
				<input type="button" onclick="$('#confirmCancelSparyModal').modal('show');" value="Cancel Spar" class="btn btn-xs btn-default btn-lg col-xs-12" />
			</div>
		</div>
	}
	Html.RenderPartial("SparNotesList", Model);
}
