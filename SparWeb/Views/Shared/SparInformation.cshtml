@model SparWeb.Models.ConfirmSparDetailsViewModel

<dl class="dl-horizontal">
    <dt>@Html.LabelFor(m => m.SparDate):</dt>
    <dd>@Model.SparDate.Value.ToString("dddd, MMMM d, yyyy")</dd>
    <div style="clear:both"></div>
    <dt>@Html.LabelFor(m => m.SparTime):</dt>
    <dd>@Model.SparTime</dd>
    <div style="clear:both"></div>
    <dt>@Html.LabelFor(m => m.SparGym):</dt>
    @if (Model.SparGym != null)
    {
        <dd>@Model.SparGym.Name</dd>
    }
    else
    {
        <dd>N/A</dd>
    }
    @if (Model.ListSparNotes == false && String.IsNullOrEmpty(Model.SparNotes) == false)
    {
        <div style="clear:both"></div>
        <dt>@Html.LabelFor(m => m.SparNotes):</dt>
        <dd>@Html.DisplayFor(m => m.SparNotes)</dd>
    }
</dl>
@if (Model.ListSparNotes == true)
{
	Html.RenderPartial("SparNotesList", Model);
}