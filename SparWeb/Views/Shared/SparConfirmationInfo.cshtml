@model SparWeb.Models.SparConfirmationViewModel

<div class="row">
    <div class="col-md-5">
        <div class="thumbnail fighterCard pull-right">
            <img height="@Model.ProfilePictureSize" src="@Util.GetProfilePictureFileForFighter(Model.ThisFighter, Model.ProfilePictureSize)" class="img-thumbnail" />
            <div class="caption text-center">
                <h3 class="media-heading">@Model.ThisFighter.Name</h3>
                <p>from <strong>@((Model.ThisFighter.Gym != null)? Model.ThisFighter.Gym.Name : "Unknown Gym")</strong></p>
            </div>
        </div>
    </div>
    <div class="col-md-2 text-center">
        <img src="@Url.Content("~/Content/Images/boxing-spar-sign.jpg")" class="boxingSparSign" />
    </div>
    <div class="col-md-5">
        <div class="thumbnail fighterCard pull-left">
            <img height="@Model.ProfilePictureSize" src="@Util.GetProfilePictureFileForFighter(Model.OpponentFighter, Model.ProfilePictureSize)" class="img-thumbnail" />
            <div class="caption text-center">
                <h3 class="media-heading">@Model.OpponentFighter.Name</h3>
                <p>from <strong>@((Model.OpponentFighter.Gym != null) ? Model.OpponentFighter.Gym.Name : "Unknown Gym")</strong></p>
            </div>
        </div>
    </div>
</div>