@model SparWeb.Models.AccountTrainerViewModel

<div class="row well well-sm spar-fighter">
	<div>
		<div class="@((Model.IsFeaturedMode == false) ? "col-md-3 vAlignCenter" : "col-md-4")">
			<div class="title hidden-md hidden-lg hidden-sm">
				<span class="trainerNameTitle"><a href="@Model.TrainerUrl">@Model.Name</a></span>
				<div class="row">
					<div class="col-md-12">
						from <span class="gymNameSmall">@Html.Raw(Util.GetGymLink(Model))</span>
						<br />
						<span>@Model.City, @Model.State</span>
					</div>
				</div>
			</div>
			<div class="profilePicture">
				<a href="@Model.TrainerUrl"><img src="@Model.ProfilePictureFile" height="150"></a>
			</div>
		</div>
		<div class="@((Model.IsFeaturedMode == false) ? "col-md-6 vAlignCenter" : "col-md-8")">
			<div class="hidden-xs">
				<span class="trainerNameTitle"><a href="@Model.TrainerUrl">@Model.Name</a><br /></span>
				<div class="row">
					<div class="col-md-12">
						from <span class="gymNameSmall">@Html.Raw(Util.GetGymLink(Model))</span>
						<br />
						<span>@Model.City, @Model.State</span>
						<br /><br />
					</div>
				</div>
			</div>
			<dl class="dl-horizontal">
				<dt>
					@Html.DisplayNameFor(model => model.PhoneNumber)
				</dt>
				<dd>
					@if (String.IsNullOrEmpty(Model.PhoneNumber) == false)
					{
						@Html.ValueFor(m => m.PhoneNumber)
					}
					else
					{
						<span>N/A</span>
					}
				</dd>
				<div style="clear:both"></div>
				<dt>
					@Html.DisplayNameFor(model => model.Website)
				</dt>
				<dd>
					@if (String.IsNullOrEmpty(Model.Website) == false)
					{
						<a href="@Html.ValueFor(m => m.Website)" target="_blank">@Html.ValueFor(m => m.Website)</a>
					}
					else
					{
						<span>N/A</span>
					}
				</dd>
				<div style="clear:both"></div>
				<dt>
					@Html.DisplayNameFor(model => model.Rate)
				</dt>
				<dd>
					@if (Model.Rate != 0)
					{
						@Html.ValueFor(m => m.Rate, "{0:C}")
					}
					else
					{
						<span>N/A</span>
					}
				</dd>
				<div style="clear:both"></div>			
			</dl>
		</div>
		@if (Model.IsFeaturedMode == false)
		{ 
		<div class="col-md-2 col-xs-12 vAlignCenter sparFighterCTA">
				<a class="btn btn-default btn-danger btn-lg selectTrainerButton" href="@Model.TrainerUrl">View Details</a>
		</div>
		}
	</div>
</div>
